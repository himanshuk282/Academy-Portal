@model Academy_Portal.Models.Help
@{
    ViewBag.Title = "GetHelp";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<h2>GetHelp</h2>

<h4>Use this to raise an issue with the Admin regarding Academy Portal</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Create a new Issue</h4>
    <hr />
    @Html.ValidationSummary(false,"", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(h => h.Issue, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(h => h.Issue, new { @class="form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(h => h.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(h => h.Description, new { @class = "form-control",@required="required" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(h => h.DateOfTicket, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBox("DateOfTicket",DateTime.Now.ToString("yyyy/MM/dd"),new { @class="form-control",@readonly="readonly"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="margin-top: 10px">
            <input type="submit" class="btn btn-success" value="Submit" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}