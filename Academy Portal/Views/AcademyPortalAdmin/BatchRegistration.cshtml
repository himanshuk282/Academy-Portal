@model Academy_Portal.Models.Batch
@{
    ViewBag.Title = "BatchRegistration";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>BatchRegistration</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Create a new batch by entering the below details</h4>
    <hr />
    @Html.ValidationSummary(false,"", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(b => b.Technology, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(b => b.Technology, new { @class="form-control",@placeholder="Enter technology name"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.BatchStartDate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(b => b.BatchStartDate, new {htmlAttributes=new { @class = "form-control"} })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.BatchEndDate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(b => b.BatchEndDate, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.BatchCapacity, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(b => b.BatchCapacity, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter batch capacity" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.ClassroomName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(b => b.ClassroomName,new { @class = "form-control", @placeholder = "Enter classroom name" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.SkillID, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(b => b.SkillID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter skill id" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.ModuleID, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(b => b.ModuleID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter module id" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.FacultyID, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(b => b.FacultyID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter faculty id" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="margin-top:10px">
            <input type="submit" class="btn btn-success" value="Submit" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


