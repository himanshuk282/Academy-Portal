@model Academy_Portal.Models.Module
@{
    ViewBag.Title = "ModuleRegistration";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ModuleRegistration</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Create a new module</h4>
    <hr />
    @Html.ValidationSummary(false,"", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Technology, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Technology, new { @class = "form-control",@placeholder="Enter a tecnology name"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ProficiencyLevel, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ProficiencyLevel, new { @class = "form-control", @placeholder = "Enter proficiency level" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ExecutionType, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <select class="form-control" id="ExecutionType" name="ExecutionType">
                <option value="E-Learning">E-Learning</option>
                <option value="Classroom Training">Classroom Training</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CertificationType, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <select class="form-control" id="CertificationType" name="CertificationType">
                <option value="Internal">Internal</option>
                <option value="External">External</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CertificationName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CertificationName, new { @class = "form-control", @placeholder = "Enter a cetification name" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="margin-top:10px">
            <input type="submit" class="btn btn-success" value="Submit" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
