@model Academy_Portal.Models.Help
@{
    ViewBag.Title = "ProvideResolution";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Provide Resolution</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Provide solution to the below query</h4>
    <hr />
    @Html.ValidationSummary(false,"", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(h => h.Issue, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(h => h.Issue, new { @class="form-control",@readonly="readonly"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(h => h.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(h => h.Description, new { @class = "form-control", @readonly ="readonly"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(h => h.DateOfTicket, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(h => h.DateOfTicket,"{0: d MMM yyyy}", new { @class="form-control",@readonly="readonly"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(h => h.ResolutionProvided, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(h => h.ResolutionProvided, new { @class="form-control"})
        </div>
    </div>
    @Html.HiddenFor(h=>h.RequestId)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="margin-top:10px">
            <input type="submit" class="btn btn-success" value="Submit" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

